{{ form_start(form) }}
<div class="row">
    <div class="mb-3 col col-12">
        <label for="{{ form.manualFile.vars.id }}" class="form-label">Arquivo do Manual</label>
        {{ form_widget(form.manualFile) }}
        {% if product_manual.manualFile is not empty %}
            <a class="btn btn-sm btn-secondary mt-3" target="_blank" href="{{ vich_uploader_asset(product_manual,'manualFile') }}">Ver PDF</a>
        {% endif %}
    </div>

    <div class="mb-3 col col-12">
        <label for="{{ form.title.vars.id }}" class="form-label">Título</label>
        {{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-12">
        <label for="{{ form.description.vars.id }}" class="form-label">Descrição</label>
        {{ form_widget(form.description, {'attr':{'class':'form-control'}}) }}
    </div>

</div>


<button class="btn btn-info text-white float-start mt-3">Salvar</button>
{{ form_end(form) }}
