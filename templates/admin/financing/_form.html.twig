{{ form_start(form) }}
<div class="row">
    <div class="mb-3 col col-6">
        <label for="{{ form.title.vars.id }}" class="form-label">Nome</label>
        {{ form_widget(form.title, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col-6">
        <label for="{{ form.shortDescription.vars.id }}" class="form-label">Legenda</label>
        {{ form_widget(form.shortDescription, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-12">
        <label for="{{ form.fullDescription.vars.id }}" class="form-label">Descrição Completa</label>
        {{ form_widget(form.fullDescription, {'attr':{'class':'form-control editor'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.status.vars.id }}" class="form-label">Ativo</label>
        {{ form_widget(form.status, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.highlighted.vars.id }}" class="form-label">Aparecer na Home</label>
        {{ form_widget(form.highlighted, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.position.vars.id }}" class="form-label">Posição</label>
        {{ form_widget(form.position, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.imageFile.vars.id }}" class="form-label">Imagem</label>
        {{ form_widget(form.imageFile) }}
        {% if financing.imageFile is not empty %}
            <img class="mt-3" src="{{ vich_uploader_asset(financing,'imageFile') }}" width="150" />
        {% endif %}
    </div>

    <div class="mb-3 col col-6">
        <label for="{{ form.language.vars.id }}" class="form-label">Idioma</label>
        {{ form_widget(form.language, {'attr':{'class':'form-control'}}) }}
    </div>
</div>


<script src="https://cdn.tiny.cloud/1/fgoswlkgkpmdzt0fcrpns1iaszu7uspeqxnd841096wuq5wp/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        menubar: false,
        selector: 'textarea.editor',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | fontsize | bold italic underline strikethrough | numlist bullist | removeformat',
    });
</script>

<button class="btn btn-info text-white float-start">Salvar</button>
{{ form_end(form) }}
